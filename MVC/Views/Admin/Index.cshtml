@model MVC.Models.AdminViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Administration</h2>

@if (Model.BrokenVinyls.Any())
{
    <br />
    <h3>Broken Vinyls</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrokenVinyls.First().Artist.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrokenVinyls.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrokenVinyls.First().Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrokenVinyls.First().Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrokenVinyls.First().Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.BrokenVinyls)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Repair", "Edit", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}

<div class="row">
    <div class="col-md-5">
        <h3>Artists</h3>
        @Html.Partial("NameableList", Model.Artists)
    </div>
    <div class="col-md-offset-2 col-md-5">
        <h3>Genres</h3>
        @Html.Partial("NameableList", Model.Genres)
    </div>
</div>

@if (Model.AllVinyls.Any())
{
    <br />
    <h3>Vinyls</h3>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllVinyls.First().Artist.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllVinyls.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllVinyls.First().Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllVinyls.First().Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AllVinyls.First().Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.AllVinyls)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
