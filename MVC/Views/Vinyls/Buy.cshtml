@model MVC.Models.BuyViewModel

@{
    ViewBag.Title = "Buy";
}
<h2>Buy Record</h2>

<br />
<div>

</div>

<div>
    <row>
        <div class="col-md-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Vinyl.Artist)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Vinyl.Artist.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Vinyl.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Vinyl.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Vinyl.Genre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Vinyl.Genre.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Vinyl.Year)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Vinyl.Year)
                </dd>

                <dt>
                    Price (Dkk)
                </dt>

                <dd>
                    @Html.Partial("Price", Model.Vinyl)
                </dd>

                <br />
                <div class="col-md-offset-6">
                    <input class="btn btn-default" type="submit" value="Purchase" />
                </div>
            </dl>

            <p>
                @Html.ActionLink("Back to List", "Index")
            </p>
        </div>
        <div class="col-md-4">
            <img class="details-albumCover" src="@Model.Vinyl.CoverUrl" />
        </div>
    </row>
</div>

