@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
            <a href="/Manage" title="Manage"><img class="account-icon" src="/pictures/Signed-In.png" /></a>
        </li>
        <li>
            @*<a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>*@
            <a href="javascript:document.getElementById('logoutForm').submit()"><img class="account-icon" src="/pictures/Sign-Out.png" /></a>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/Register" id="registerLink"><img class="account-icon" src="/pictures/Sign-Up.png"/></a></li>
        <li><a href="/Account/Login" id="loginLink"><img class="account-icon" src="/pictures/Sign-In.png"/></a></li>
    </ul>
}
